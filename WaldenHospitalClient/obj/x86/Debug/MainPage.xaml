<Page
    x:Class="WaldenHospitalClient.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WaldenHospitalClient"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Opacity="1" RequestedTheme="Light">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFC9D6FF" Offset="0.288"/>
                <GradientStop Color="#FFE2E2E2" Offset="1"/>
                <GradientStop Color="#FFD3DBF2" Offset="0.706"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Border BorderBrush="{x:Null}" Height="162" Width="1490" Margin="10,36,0,802">
            <TextBlock TextWrapping="Wrap" Text="Walden Hospital" FontSize="80" HorizontalAlignment="Center"/>

        </Border>


        <StackPanel HorizontalAlignment="Left" Height="525" VerticalAlignment="Top" Width="496" Margin="500                     ,250,0,0" Background="White">
            <TextBlock TextWrapping="Wrap" Text="USER LOGIN"  Margin="0,20,0,0" FontSize="36" FontFamily="Berlin Sans FB" HorizontalAlignment="Center"/>
            <Image Source="..\Assets\man-user.png" Height="86"/>
            <TextBlock Text="Email"  Margin="20,30,20,0"/>
            <TextBox TextWrapping="Wrap"    Foreground="White" Margin="20,0,20,0" Height="60" Background="#FFEBEBEB" BorderBrush="{x:Null}"/>
            <TextBlock Text="Password"  Margin="20,30,20,0"/>
            <TextBox TextWrapping="Wrap"    Foreground="White"  Margin="20,0,20,0" Height="60" Background="#FFEBEBEB" BorderBrush="{x:Null}" RenderTransformOrigin="1,0.5"/>
            <StackPanel Height="100" Margin="0,35,0,0" Background="#FFEBEBEB">
                <Button Content="LOG IN" Background="#FF1DD2FF"  HorizontalAlignment="right"  Margin="0,0,20,-40" VerticalAlignment="Stretch" Height="60" BorderBrush="{x:Null}" Width="135"/>
                <CheckBox Content="Remember me&#xD;&#xA;" HorizontalAlignment="Left"  Margin="20,-10,0,0" VerticalAlignment="Stretch"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

